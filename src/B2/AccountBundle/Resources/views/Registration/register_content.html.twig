{% trans_default_domain 'FOSUserBundle' %}
{#{{ dump(form) }}#}
<div class="login-form">
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-signin">
    {#{{ form_widget(form) }}#}

    <h2 class="form-signin-heading">Registration</h2>

    <div class="form-element">
        {{ form_errors(form.firstName) }}
        {{ form_widget(form.firstName, { 'attr': {'class': 'form-control', 'placeholder':'First Name'} }) }}
    </div>
    <div class="form-element">
        {{ form_errors(form.lastName) }}
        {{ form_widget(form.lastName, { 'attr': {'class': 'form-control', 'placeholder':'Last Name'} }) }}
    </div>
    <div class="form-element">
        {{ form_errors(form.username) }}
        {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder':'Username'} }) }}
    </div>
    <div class="form-element">
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder':'Email address'} }) }}
    </div>
    <div class="form-element">
        {{ form_errors(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder':'Password'} }) }}
    </div>
    <div class="form-element">
        {{ form_errors(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder':'Confirm Password'} }) }}
    </div>

    <div class="form-element">
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-lg btn-primary btn-block" />
    </div>
</form>
</div>
