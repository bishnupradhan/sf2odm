{% extends 'B2MainBundle::layout.html.twig' %}
{% block title "- Login form -" %}
    {% block content %}
<div class="container">
        {#{{ form(form) }}#}
<div class="login-form">
    {{ form_start(form) }}
    <h2 class="form-signin-heading">Please sign in</h2>
    {{ form_errors(form) }}
    <div class="form-element">
        {#{{ form_label(form.email) }}#}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder':'Email address'} }) }}
    </div>

    <div class="form-element">
        {#{{ form_label(form.password) }}#}
        {{ form_errors(form.password) }}
        {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'placeholder':'Password'} }) }}
    </div>

    <div class="form-element">
        {{ form_label(form.save) }}
        {{ form_widget(form.save, { 'attr': {'class': 'btn btn-lg btn-primary btn-block'} }) }}
    </div>

    {{ form_end(form) }}
</div>
    </div>
    {% endblock %}
