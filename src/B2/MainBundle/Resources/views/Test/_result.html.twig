{% extends 'B2MainBundle::layout.html.twig' %}
{% block title "- Result -" %}
    {% block content %}

        {% set cat = category|split('-') %}
        {% set sub = subcategory|split('-') %}


        <h3>You have successful complete the test for : {% for catName in cat %} {{ catName|capitalize }}{% endfor %} >> {% for catName in sub %} {{ catName|capitalize }}{% endfor %}</h3>

        {% for index in result %}

            <h3>Question No . {{ loop.index }}</h3>
            <p>You  have  {{ index.status }} </p>

            <h4>Answer Sheet :</h4>
            {{ index.answerSheet|raw }}
            <hr>
        {% endfor %}

        <div><a href="{{ path('main_list') }}" class="sf-button sf-button-selected">Take another test</a></div>
    {% endblock %}