{% extends 'B2MainBundle::layout.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block content_header '' %}
    {% block content %}
        {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

        <h1 class="title">Welcome!</h1>

        <p>You are in the home page.</p>

        <div class="symfony-blocks-welcome">
            <div class="block-quick-tour">
                <div class="illustration">
                    <img src="{{ asset('images/welcome-demo.gif') }}" alt=Login" />
                </div>
                <a href="{{ path('account_login') }}" class="sf-button sf-button-selected">
                <span class="border-l">
                    <span class="border-r">
                        <span class="btn-bg">Login</span>
                    </span>
                </span>
                </a>
            </div>
            {#{% if app.environment == 'dev' %}#}
                <div class="block-configure">
                    <div class="illustration">
                        <img src="{{ asset('images/welcome-configure.gif') }}" alt="Registration" />
                    </div>
                    <a href="{{ path('account_register') }}" class="sf-button sf-button-selected">
                    <span class="border-l">
                        <span class="border-r">
                            <span class="btn-bg">Register</span>
                        </span>
                    </span>
                    </a>
                </div>
           {# {% endif %}#}
            <div class="block-configure">
                <div class="illustration">
                    <img src="{{ asset('images/welcome-configure.gif') }}" alt="Test Listing" />
                </div>
                <a href="{{ path('main_list') }}" class="sf-button sf-button-selected">
                    <span class="border-l">
                        <span class="border-r">
                            <span class="btn-bg">Test</span>
                        </span>
                    </span>
                </a>
            </div>
        </div>

{% endblock %}